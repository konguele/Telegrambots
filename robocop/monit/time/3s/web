# Este job activa la actualización automática de CPU en robocop en el horario elegido del servidor web
/usr/bin/robocop --metrics --cpu --server web &> /dev/null
# Este cronjob activa la actualización automática de PING en robocop en el horario elegido del servidor web
/usr/bin/robocop --metrics --ping --server web > /dev/null
# Este job activa la actualización automática de MEMORIA en robocop en el horario elegido del servidor web
/usr/bin/robocop --metrics --memory --server web > /dev/null
# Este job activa la actualización automática del FS /dev en robocop en el horario elegido del servidor web
/usr/bin/robocop --metrics --fs /dev --server web > /dev/null
# Este job activa la actualización automática del FS / en robocop en el horario elegido del servidor web
/usr/bin/robocop --metrics --fs / --server web > /dev/null
# Este job activa la actualización automática del FS /tmp en robocop en el horario elegido del servidor web
/usr/bin/robocop --metrics --fs /tmp --server web > /dev/null
# Este job activa la actualización automática del servicio Web en robocop en el horario elegido del servidor web
/usr/bin/robocop --metrics --service Web httpd --server web > /dev/null
# Este job activa la actualización automática del servicio MariaDB en robocop en el horario elegido del servidor web
/usr/bin/robocop --metrics --service MariaDB mysql --server web > /dev/null
